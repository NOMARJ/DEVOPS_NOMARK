# =============================================================================
# DevOps Agent - Terraform Secrets
# =============================================================================
# Copy this file to secrets.tfvars and fill in your values.
# NEVER commit secrets.tfvars to version control!
# =============================================================================

# Your SSH public key (from ~/.ssh/id_rsa.pub or similar)
ssh_public_key = "ssh-rsa AAAA... your-email@example.com"

# Anthropic API key for Claude Code
# Get from: https://console.anthropic.com/
anthropic_api_key = "sk-ant-..."

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
github_token = "ghp_..."

# Your n8n webhook base URL
# This is where the VM will send progress updates
n8n_webhook_base_url = "https://n8n.yourdomain.com/webhook"

# Default repository for development tasks
default_repo_url = "https://github.com/YOUR_ORG/FlowMetrics.git"

# Optional: DevOps Agent repo for syncing skills
# devops_agent_repo = "https://github.com/YOUR_ORG/devops-agent.git"

# Optional: Restrict SSH access to specific IPs
# allowed_ssh_ips = ["203.0.113.0/24", "198.51.100.50/32"]

# Optional: Change VM size
# vm_size = "Standard_B4ms"

# Optional: Change region
# location = "australiaeast"

# Optional: Change auto-shutdown time (UTC)
# auto_shutdown_time = "1900"
