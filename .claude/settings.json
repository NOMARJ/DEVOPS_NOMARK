{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "teammateMode": "auto",
  "permissions": {
    "allow": [
      "Bash(git *)",
      "Bash(gh *)",
      "Bash(terraform *)",
      "Bash(az *)",
      "Bash(python *)",
      "Bash(pip *)",
      "Bash(pytest *)",
      "Bash(black *)",
      "Bash(ruff *)",
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(ls *)",
      "Bash(cat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(grep *)",
      "Bash(find *)",
      "Bash(which *)",
      "Bash(pwd)",
      "Bash(curl *)",
      "Bash(jq *)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {
          "toolNames": ["Write", "Edit"]
        },
        "hooks": [
          {
            "type": "command",
            "command": "black --quiet --check \"$CLAUDE_FILE_PATH\" 2>/dev/null && ruff check --quiet \"$CLAUDE_FILE_PATH\" 2>/dev/null || true"
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "/home/user/DEVOPS_NOMARK/.claude/hooks/teammate-idle-check.sh"
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "/home/user/DEVOPS_NOMARK/.claude/hooks/task-completed-check.sh"
          }
        ]
      }
    ]
  }
}
